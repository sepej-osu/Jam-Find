{
  "name": "Jam Session - Backend Dev",
  
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.override.yml"
  ],
  
  "service": "backend",
  
  "workspaceFolder": "/app",
  
  "runServices": ["db", "backend", "frontend", "proxy"],
  "forwardPorts": [5173, 8000, 8080, 8090],
  
  "overrideCommand": false,
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "editor.formatOnSave": true
      }
    }
  },
  "remoteUser": "root"
}